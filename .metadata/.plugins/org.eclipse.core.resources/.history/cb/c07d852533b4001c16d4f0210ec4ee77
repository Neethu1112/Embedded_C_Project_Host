#include<stdio.h>

struct weather{
	char day[10];
	float temp;
};
void sort(struct weather *day);
void display (struct weather *week);
int main()
{
	struct weather week[7]={
			{ "Sunday", 72.5 },
			{ "Monday", 68.4 },
			{ "Tuesday", 75.0 },
			{ "Wednesday", 73.8 },
			{ "Thursday", 65.1 },
			{ "Friday", 72.8 },
			{"Saturday", 75.2 }
	};
	//struct weather t;
	display(week);
	//sort(week);
	//display(week);
}

void display (struct weather *week)
{
	int x;
	for (x =0; x<7;x++)
	{
		printf("%10s had %.1f temperature",week->day,week->temp);
	}
}

