#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#define SIZE  65
void converter(char *str);

int main()
{

	char string[SIZE];

	printf("Enter input: ");
	fgets(string,SIZE,stdin);
	int length = strlen(string);

	converter(string);
	printf("converted string: ");
	printf("%s",string);
	return 0;
}
void converter(char *str)
{
	while(*str)
	{
		*str = toupper(*str);
		if(*str == ' ')
			*str = '_';
		str++;
	}
}
